                                        <img class="rounded-circle" src="~/bank-template/images/user.png" alt="">
                                    </div> @ViewBag.UserName <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="dropdown-menu-md sub-menu profile-drop">
                                    <li class="dropdown-header">
                                        <div>
