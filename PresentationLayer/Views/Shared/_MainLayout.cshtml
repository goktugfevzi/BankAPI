                </div>
            </div>
        </div>
        <!-- Content end -->
        <!-- Footer strat -->
        <footer class="footer">
            <div class="foo-btm">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <div class="copyright">Tüm Hakları Saklıdır &copy; </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer end -->

    </div>
    <!-- Document Wrapper end -->
    <!-- Script -->
    <script src="~/bank-template/js/jquery.min.js"></script>
