    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--TITLE-->
    <title>EnterBankX</title>

    <!-- Favicon icon -->
    <link rel="shortcut icon" type="image/png" href="~/bank-template/images/favicon.png" />
