@model DTOLayer.DTOs.Auth.RegisterUserDto;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Multi Step Form | CodingNepal</title>
    <link rel="stylesheet" href="~/Multi-steps-form/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <div class="container">
        <header>Üye Ol</header>
        <div class="progress-bar" >
            <div class="step">
                <p>İsim</p>
                <div class="bullet">
                    <span>1</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>İletişim</p>
                <div class="bullet">
                    <span>2</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Kayıt</p>
                <div class="bullet">
                    <span>3</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
        </div>
        <div class="form-outer">
            <form method="post">
                <div class="page slide-page">
                    <div class="title">Temel Bilgiler:</div>
                    <div class="field">
                        <div class="label">İsim</div>
                        <input type="text" name="FirstName">
                    </div>
                    <div class="field">
                        <div class="label">Soyisim</div>
                        <input type="text" name="LastName">
                    </div>
                    <div class="field">
                        <button class="firstNext next">İleri</button>
                    </div>
                </div>

                <div class="page">
                    <div class="title">İletişim Bilgileri:</div>
                    <div class="field">
                        <div class="label">Email Adresi</div>
                        <input type="text" name="Email">
                    </div>
                    <div class="field">
                        <div class="label">Telefon Numarası</div>
                        <input type="Number" name="PhoneNumber">
                    </div>
                    <div class="field btns">
                        <button class="prev-1 prev">Geri</button>
                        <button class="next-1 next">İleri</button>
                    </div>
                </div>


                <div class="page">
                    <div class="title">Giriş Detayları:</div>
                    <div class="field">
                        <div class="label">Kullanıcı Adı</div>
                        <input type="text" name="UserName">
                    </div>
                    <div class="field">
                        <div class="label">Şifre</div>
                        <input type="password" name="Password">
                    </div>
                    <div class="field btns">
                        <button class="prev-3 prev">Geri</button>
                        <button class="submit">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="~/Multi-steps-form/script.js"></script>

</body>
</html>
