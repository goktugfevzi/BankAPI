
@{
    ViewData["Title"] = "DepositMoney";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-lg-9">
    
    <h3 class="text-5 font-weight-700 d-flex admin-heading">Para Yatırma Ekranı</h3>
    <div class="bg-white">
        <div class="row">
            <div class="col-md-8 col-lg-8 mx-auto ">
                <div class="bg-light shadow-md rounded p-3 p-sm-4 mb-8 mt-8 form-box">

                    <!-- Deposit Money Form  -->
                    <form id="FrmDeposit" method="post" class="form">
                        <div class="form-group">
                            <label for="youSend">Miktar</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text currency-icon">₺</span>
                                </div>
                                <input type="text" name="Amount" class="form-control" data-bv-field="youSend" id="youSend" value="0,00" placeholder="Miktar Giriniz">

                                <div class="input-group-append">
                                    <span class="input-group-text p-0">
                                        <select id="youSendCurrency" data-style="custom-select bg-transparent border-0" data-container="body" data-live-search="true" class="selectpicker form-control bg-transparent" required="">                                   
                                            <optgroup label="Para Birimleri">                                               
                                                <option data-icon="currency-flag currency-flag-try mr-1" data-subtext="Turkish lira" value="">TRY</option>
                                                
                                            </optgroup>
                                        </select>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="paymentMethod">Paranın Yatacağı Hesap</label>
                            <select id="cardType" class="custom-select" required="">                                
                                <option>EnterBankX</option>
                            </select>
                        </div>
                        <p class="text-muted charge-area mt-4">
                            İşlem Ücreti <span class="float-right d-flex align-items-center"><del>25.00 TL</del> <span class="bg-success text-1 text-white font-weight-500 rounded d-inline-block px-2 line-height-4 ml-2 free-charge">Ücretsiz</span></span>
                        </p>
                        <hr>
                        <p class="font-weight-500">Yatırılacak Miktar <span id="depositAmount" class="text-3 float-right">0.00 TRY</span></p>

                        <a id="BtnDeposit" class="btn btn-default btn-center btn-block">
                            <span class="bh"></span>
                            <span>Yatır</span>
                        </a>
                    </form>                   
                </div>
            </div>
        </div>
    </div>

</div>

