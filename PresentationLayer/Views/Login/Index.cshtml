@model DTOLayer.DTOs.Auth.RegisterUserDto;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>EnterBank</title>
    <link rel="stylesheet" href="~/Multi-steps-form/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <div class="container">
        <header>Giriş Yap</header>
        <div class="form-outer">
            <form method="post">
                <div class="page">
                    <div class="field">
                        <div class="label">Kullanıcı Adı</div>
                        <input type="text" name="UserName">
                    </div>
                    <div class="field">
                        <div class="label">Şifre</div>
                        <input type="password" name="Password">
                    </div>
                    @if (ViewBag.Error != null)
                    {
                        <label style="color:red">@ViewBag.Error</label>
                    }
                    <div class="field btns">
                        <button class="submit">Giriş</button>
                    </div>
                    <a href="~/ForgetPassword">Şifrenizi mi unuttunuz?</a>
                    <br />
                    <a href="~/Register">Hesabınız yok mu?</a>
                </div>
            </form>
        </div>
    </div>
    <script src="~/Multi-steps-form/script.js"></script>

</body>
</html>
