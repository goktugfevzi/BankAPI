@model DTOLayer.DTOs.Auth.ResetPasswordDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Multi Step Form | CodingNepal</title>
    <link rel="stylesheet" href="~/Multi-steps-form/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <div class="container">
        <header>Şifre Yenile</header>

        <div class="form-outer">
            <form method="post">
                <div class="page">
                    <div class="field">
                        <div class="label">Şifre</div>
                        <input type="text" name="@Model.Password">
                    </div>
                    <div class="field">
                        <div class="label">Şifre Tekrarı</div>
                        <input type="text" name="@Model.ConfirmPassword">
                    </div>
                    <input type="hidden" name="@Model.Token" value="@Model.Token">
                    <input type="hidden" name="@Model.Email" value="@Model.Email">
                    <div class="field btns">
                        <button class="prev-3 prev">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <script src="~/Multi-steps-form/script.js"></script>

</body>
</html>
